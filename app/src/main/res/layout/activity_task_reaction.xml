<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskReaction">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taskReactionLL">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/taskReaktionIV"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TaskName"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/taskReactionNameTV"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskReactionLL"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="erledigt"
                android:layout_alignParentBottom="true"
                android:id="@+id/erledigtButton"
                android:onClick="erledigtButton"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abbrechen"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/abbrechenButton"
                android:onClick="abbrechenButton"/>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>