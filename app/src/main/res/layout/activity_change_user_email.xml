<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changeUserEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="currentUserEmailTV"
                android:textSize="20sp"
                android:id="@+id/currentUserEmailTV"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="neue Emailadresse"
                android:layout_below="@+id/currentUserEmailTV"
                android:id="@+id/newUserEmail"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="Emailadresse wiederholen"
                android:layout_below="@+id/newUserEmail"
                android:id="@+id/newUserEmailrepeat"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newUserEmailrepeat"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:text="Ã„ndern"
                android:id="@+id/changeUserEmail"
                android:onClick="changeUserEmailA"
                />

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>